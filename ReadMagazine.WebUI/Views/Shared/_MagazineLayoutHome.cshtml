<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:700,300,300italic' rel='stylesheet' type='text/css' />

    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Styles/demo.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Styles/style.css")" type="text/css" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/modernizr.custom.08464.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Bootstrap/bootstrap.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Styles/Bootstrap/bootstrap.min.css")" rel="stylesheet" />
    <script id="pageTmpl" type="text/x-jquery-tmpl">
        <div class="${theClass}" style="${theStyle}">
            <div class="front">
                <div class="outer">
                    <div class="content" style="${theContentStyleFront}">
                        <div class="inner">{{html theContentFront}}</div>
                    </div>
                </div>
            </div>
            <div class="back">
                <div class="outer">
                    <div class="content" style="${theContentStyleBack}">
                        <div class="inner">{{html theContentBack}}</div>
                    </div>
                </div>
            </div>
        </div>
    </script>
</head>

<body>


    <header class="main-title">
        @{Html.RenderAction("Options", "Source");}

    </header>
    <header class="main-title" style="left: 50%">
        <h1>Experimental Page Layout <strong>Inspired by Flipboard</strong></h1>
        <p>Swipe or drag to flip the pages, click to open items </p>
        <p><strong>Best viewed in a Webkit browser (Safari, Chrome)</strong></p>
    </header>
    <div id="flip" class="container">

        @RenderBody()


    </div>


    <footer class="main-title-fotter">
        <p>Best viewed in a Webkit browser (Safari, Chrome)</p>
        <p><strong>www.ReadMagazine.com.ar : ReadMagazine © 2013 | web: [popo] | arte: popo</strong></p>
    </footer>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript">

        var $container = $('#flip'),
            $pages = $container.children().hide();

        Modernizr.load({
            test: Modernizr.csstransforms3d && Modernizr.csstransitions,
            yep: ['/Scripts/jquery.tmpl.min.js', '/Scripts/jquery.history.js', '/Scripts/core.string.js', '/Scripts/jquery.touchSwipe-1.2.5.js', '/Scripts/jquery.flips.js'],
            nope: '/Styles/fallback.css',
            callback: function (url, result, key) {

                if (url === '/Styles/fallback.css') {
                    $pages.show();
                }
                else if (url === '/Scripts/jquery.flips.js') {
                    $container.flips(option = { "current": '@ViewBag.Page' });
                }

            }
        });

		</script>


</body>
</html>
